{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "g++.exe",
			"args": [
				"-I",
				"${workspaceFolder}\\include",
				"-o",
				"${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
				"${file}",
				"${workspaceFolder}\\src\\loader.cpp"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "compiler: g++.exe"
		},
		{
			"type": "process",
			"label": "C/C++: upx.exe pack file",
			"command": "upx.exe",
			"args": [
				"--best",
				"--brute",
				"${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "packer: g++.exe"
		}
	]
}